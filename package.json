{
  "name": "terrain-simulation-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    }
  },
  "scripts": {
    "dev": "pnpm --filter \"*\" run dev",
    "build": "pnpm --filter \"*\" run build",
    "test": "pnpm --filter \"*\" run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test e2e/terrain.visual.spec.ts",
    "test:visual:update": "playwright test e2e/terrain.visual.spec.ts --update-snapshots",
    "lint": "pnpm --filter \"*\" run lint",
    "typecheck": "pnpm --filter \"*\" run typecheck",
    "ci": "python scripts/run-ci-locally.py"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0"
  }
}
